def equation_thing(x: Int, y: Int): Float =
    x + math.exp(y * 1 / x);

--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-- Records & Structs
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
struct Person {
    name : String;
    age  : Int;
};

def print_name(p: Person): Unit =
    println(p.name)

me: Person = Person { name = "Angel"; age = 21; };
print_name(me)

--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-- Sum Types (Enums)
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

enum Option[A] {
    None,
    Some(value: A)
};

-- map for Option
def option_map[A, B](opt: Option[A], f: A -> B): Option[B] =
    match opt {
        None      => None;
        Some(v)   => Some(f(v));
    };

