--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-- Functions
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

-- Simple expression‑bodied function
def add(x: Int, y: Int): Int = x + y;

-- Function that mutates one of its parameters
def add_mut(x: mut Int, y: Int): () = {
    x = x + y;
}

-- Using a mutable argument at the call‑site
x: mut Int = 14;
add_mut(mut x, 2);

